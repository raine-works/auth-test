{
	"tasks": {
		"hook": "deno run -A https://deno.land/x/deno_hooks@0.1.1/mod.ts"
	},
	"workspace": [
		"apps/*"
	],
	"fmt": {
		"useTabs": true,
		"semiColons": true,
		"singleQuote": true,
		"indentWidth": 4,
		"lineWidth": 120
	},
	"compilerOptions": {
		"lib": ["ES2020", "DOM", "DOM.Iterable", "deno.ns"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"jsxImportSourceTypes": "@types/react"
	}
}
